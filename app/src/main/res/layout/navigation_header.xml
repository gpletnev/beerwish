<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="user"
            type="com.example.beerwish.data.User" />
    </data>

    <RelativeLayout
        android:id="@+id/navigation_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:padding="@dimen/navigation_drawer_header_padding">

        <TextView
            android:id="@+id/user_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/navigation_drawer_header_padding"
            android:text="@{@string/name_format(user.first_name, user.last_name)}"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@id/user_full_name"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/nav_header_desc"
            app:srcCompat="@{user.user_avatar}" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_full_name"
            android:layout_toEndOf="@id/user_avatar"
            android:paddingStart="@dimen/navigation_drawer_header_padding"
            android:paddingEnd="@dimen/navigation_drawer_header_padding"
            android:paddingBottom="@dimen/navigation_drawer_header_padding"
            android:text="@{user.user_name}"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_toEndOf="@id/user_avatar"
            android:paddingStart="@dimen/navigation_drawer_header_padding"
            android:paddingEnd="@dimen/navigation_drawer_header_padding"
            android:paddingBottom="@dimen/navigation_drawer_header_padding"
            android:text="@{user.location}"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location"
            android:layout_toEndOf="@id/user_avatar"
            android:paddingStart="@dimen/navigation_drawer_header_padding"
            android:paddingEnd="@dimen/navigation_drawer_header_padding"
            android:text="@{user.url}"
            android:textAppearance="@style/TextAppearance.AppCompat" />

    </RelativeLayout>
</layout>